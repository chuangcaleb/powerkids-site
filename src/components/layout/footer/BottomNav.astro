---
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import Section from "../section.astro";
import PowerKids from "@/components/brand/PowerKids.astro";
---

<div class="border-t-[0.2em]">
  <Section contentWidth="xl">
    <a
      href="/"
      class:list={cn(
        buttonVariants({ variant: "ghost", size: "unset" }),
        "fl-h-3xl fl-p-3xs fl-gap-xs",
      )}
    >
      <img src="/images/logo.svg" alt="PowerKids Logo" class="h-full" />
      <h3 class="fl-text-step-3 font-marker fl-mt-s">
        <PowerKids />
      </h3>
    </a>
  </Section>
</div>
