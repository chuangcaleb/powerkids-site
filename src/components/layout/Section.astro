---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"section"> {
  contentWidth?: "lg" | "xl" | "2xl" | "unset"; // default: max-w-xl
  // paddingX?: "always" | "none" | "mobile"; // default: (gutters only on) mobile
  noPaddingY?: boolean;
  // variant?: "base" | "dark" | "secondary"; // default: base
}
const {
  contentWidth = "xl",
  // paddingX = "mobile",
  noPaddingY = false,
  // variant = "base",
  class: extraClass,
  ...attrs
} = Astro.props;
---

<section
  class={cn(
    "fl-px-m",
    contentWidth === "lg" && "max-w-screen-lg mx-auto",
    contentWidth === "xl" && "max-w-screen-xl mx-auto",
    contentWidth === "2xl" && "max-w-[1500px] mx-auto",
    !noPaddingY && "fl-py-3xl",
    extraClass,
  )}
  {...attrs}
>
  <slot />
</section>
