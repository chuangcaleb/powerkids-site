---
import Pill from "@/components/brand/pill";
import Document from "@/components/layout/document.astro";
import { PROGRAMS } from "@/components/layout/nav/nav-links";
import Section from "@/components/layout/section.astro";
import { buttonVariants } from "@/components/ui/button";
import { cardStyle } from "@/components/ui/card";

import { cn } from "@/lib/utils";
import { Cloudinary } from "astro-cloudinary-image";

const program = PROGRAMS.find((p) => p.title === "After School Program");
---

<Document>
  <Section contentWidth="lg">
    <div class="fl-space-y-l">
      <div class="flex fl-gap-x-m flex-wrap">
        <h1 class="fl-text-step-4 font-marker">After School Program</h1>
        <Pill size="lg" className="my-auto">
          {program?.pill}
        </Pill>
      </div>
      <div class="fl-space-y-l [&_*]:fl-text-step-1">
        <p>Learning beyond traditional academics.</p>
        <p>
          After in-house prepared lunch and homework coaching, we have a variety
          of
          <strong>enrichment classes</strong> prepared for the children!
        </p>
        <p>For example (and not limited to):</p>
        <ul class="list-disc fl-pl-l">
          <li>
            <strong>Domestic Science</strong> for children to explore practical
            kitchen skills,
          </li>
          <li>
            <strong>Creative Art and Craft</strong> as a means of outwardly
            expressing their inner thoughts and emotions,
          </li>
          <li>
            <strong>Speech & Drama</strong> into the world of imagination and
            stepping out to speak with <i>confidence</i>,
          </li>
          <li>
            <strong>Information Communication Technology</strong> with hands-on
            activities to train up relevant digital skills!
          </li>
        </ul>
        <p>Take a look at one of our featured programs!</p>
        <div class="flex fl-gap-m flex-wrap">
          <a href="/" class={buttonVariants({ variant: "red" })}>register</a>
          <a href="/" class={buttonVariants({ variant: "blue" })}> contact</a>
        </div>
      </div>
    </div>
  </Section>
  <Section class="fl-space-y-l columns-lg fl-gap-s" contentWidth="xl">
    <Cloudinary
      src="v1690987797/powerkids/programs/after/ASP_front.jpg"
      alt=""
      errorImage=""
      class:list={cn(cardStyle())}
    />
    <Cloudinary
      src="v1690987797/powerkids/programs/after/ASP_back.jpg"
      alt=""
      errorImage=""
      class:list={cn(cardStyle())}
    />
    <Cloudinary
      src="v1690987797/powerkids/programs/after/ASP_front_chinese.jpg"
      alt=""
      errorImage=""
      class:list={cn(cardStyle())}
    />
    <Cloudinary
      src="v1690987797/powerkids/programs/after/ASP_back_chinese.jpg"
      alt=""
      errorImage=""
      class:list={cn(cardStyle())}
    />
  </Section>
</Document>
