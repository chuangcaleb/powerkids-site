---
import Document from "@/components/layout/document.astro";
import Section from "@/components/layout/section.astro";
import { buttonVariants } from "@/components/ui/button";
import { cardStyle } from "@/components/ui/card";
import pkCloudinary from "@/lib/cloudinary";
import { cn } from "@/lib/utils";

interface CldImage {
  url: string;
  height: number;
  width: number;
}

const morningPhotos = await pkCloudinary.api.resources({
  type: "upload",
  prefix: "powerkids/programs/morning",
});
---

<Document>
  <Section contentWidth="lg">
    <div class="[&>p]:fl-text-step-1 fl-space-y-l max-w-screen-md">
      <h1 class="fl-text-step-4 font-marker">Morning School</h1>
      <p>
        Essential early childhood education (ECE) provided for children from
        Ages 2 to 6!
      </p>
      <p>
        There will be emphasis on building social emotion to cognitive study
        from very young age. PowerKids has a track record of strong academics
        and good character transformation.
      </p>
      <div class="flex fl-gap-m max-md:justify-center flex-wrap">
        <a href="/" class={buttonVariants({ variant: "red", size: "lg" })}
          >register</a
        >
        <a href="/" class={buttonVariants({ size: "lg", variant: "blue" })}>
          contact
        </a>
      </div>
    </div>
  </Section>
  <Section class="fl-space-y-l columns-sm fl-gap-s" contentWidth="xl">
    {
      morningPhotos.resources.map((image: CldImage) => (
        <img
          src={image.url}
          alt="A PowerKids student offering an apple"
          class={cn(cardStyle(), "fl-mb-s col-span-2")}
          height={image.height}
          width={image.width}
        />
      ))
    }
  </Section>
</Document>
