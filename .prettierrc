{
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "tabWidth": 2,
  "singleQuote": false,
  "astroAllowShorthand": false,
  "tailwindConfig": "./tailwind.config.ts"
}
